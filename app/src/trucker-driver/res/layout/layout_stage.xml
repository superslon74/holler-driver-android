<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/of_stage_1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="5dp"
        android:enabled="true"
        android:background="@drawable/shape_dot_stage"
        />

    <ImageView
        android:id="@+id/of_stage_1-2"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/shape_line_stage"
        />

    <TextView
        android:id="@+id/of_stage_2"
        android:enabled="false"

        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/shape_dot_stage"
        />

    <ImageView
        android:id="@+id/of_stage_2-3"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/shape_line_stage"
        />

    <TextView
        android:id="@+id/of_stage_3"
        android:enabled="false"
        android:layout_marginStart="5dp"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/shape_dot_stage"
        />
</merge>