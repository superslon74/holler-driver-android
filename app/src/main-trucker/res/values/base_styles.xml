<resources
    xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="FragmentHeaderMini">
        <attr name="hm_title" format="reference|string" />
    </declare-styleable>
    <declare-styleable name="FragmentHeaderBig">
        <attr name="hb_title" format="reference|string" />
    </declare-styleable>
    <declare-styleable name="UserStatusToggle">
        <attr name="ust_online" format="boolean"/>
        <attr name="ust_offline" format="boolean"/>
        <attr name="ust_disapproved" format="boolean"/>
        <attr name="ust_blocked" format="boolean"/>
        <attr name="ust_riding" format="boolean"/>

        <attr name="ct_bg_color" format="color"/>
        <attr name="ct_bt_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="UserStatusDot">
        <attr name="usd_online" format="boolean"/>
        <attr name="usd_offline" format="boolean"/>
        <attr name="usd_disapproved" format="boolean"/>
        <attr name="usd_blocked" format="boolean"/>
        <attr name="usd_riding" format="boolean"/>
        <attr name="usd_has_border" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ImageView">
        <attr name="usd_selected" format="boolean"/>
    </declare-styleable>

    <style name="TextAppearance">
        <item name="android:gravity">left</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textAlignment">viewStart</item>

    </style>

    <style name="TextAppearance.Regular">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
    <style name="TextAppearance.Medium">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>
    <style name="TextAppearance.Bold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="TextAppearance.ExtraBold">
        <item name="android:fontFamily">@font/montserrat_extrabold</item>
    </style>

    <style name="Input" parent="TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColorHint">@color/themeAccent</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Button" parent="TextAppearance.ExtraBold">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/themePrimary</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">5dp</item>

    </style>

    <style name="Link" parent="TextAppearance.Medium">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/themeAccent</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@color/transparent</item>

    </style>

    <style name="Container">

        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="Avatar">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="civ_border_color">#FFFFFF</item>
        <item name="civ_border_width">4dp</item>
        <item name="civ_shadow">true</item>
        <item name="civ_shadow_radius">10</item>
        <item name="civ_shadow_color">#FFFFFF</item>
    </style>

    <!--Welcome screen-->
    <style name="Container.ws">
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
    <style name="Button.ws">
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="Button.ws.login">
        <item name="android:background">@color/themeAccent</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>
    <style name="Button.ws.signin">
        <item name="android:background">@color/themePrimary</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="TextAppearance.Bold.ws" parent="Container.ws">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>

    </style>

    <style name="TextAppearance.Medium.ws" parent="Container.ws">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">8sp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>

    </style>

    <!--login-->
    <style name="Container.ls">
        <item name="android:paddingTop">80dp</item>
        <item name="android:paddingLeft">60dp</item>
        <item name="android:paddingRight">60dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>


    <style name="Input.ls">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="Link.ls">
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/themePrimary</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RoundButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/shape_circle_accent</item>
    </style>

    <!--header-->
    <style name="Header_BackButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:src">@drawable/vec_chevron_left_white</item>
    </style>

    <style name="Header_Title">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAlignment">center</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <!--approval-->
    <style name="Container.as">
        <item name="android:paddingBottom">45dp</item>
        <item name="android:paddingStart">45dp</item>
        <item name="android:paddingEnd">45dp</item>

    </style>
    <style name="TextAppearance.Bold.as">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">35dp</item>
    </style>

    <!--main-->
    <!--menu-->

    <style name="TextAppearance.Bold.menu">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Regular.menu">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@drawable/selector_menu_item</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    <style name="TextAppearance.Regular.menu.un">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="Container.menu" parent="">
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">15dp</item>

    </style>

    <!--order-->
    <style name="TextAppearance.Bold.of">

        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextAppearance.Bold.of.otp">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Link.of">
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:minHeight">0dp</item>

        <item name="android:textColor">@color/yellowLight</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_extrabold</item>

    </style>

    <style name="Button.of" parent="TextAppearance.ExtraBold">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:background">@color/yellowLight</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">35dp</item>
        <item name="android:paddingEnd">35dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textAllCaps">true</item>

        <item name="android:textColor">@color/themePrimary</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Input.of">

        <item name="android:textSize">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:color">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_extrabold</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:maxLength">1</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">number</item>



    </style>

    <style name="Button.of.star" parent="">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:src">@drawable/vec_star_yellow_border</item>
    </style>

</resources>
