<resources
    xmlns:tools="http://schemas.android.com/tools">

    <style name="TextAppearance">
        <item name="android:gravity">left</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textAlignment">viewStart</item>

    </style>

    <style name="TextAppearance.Regular">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
    <style name="TextAppearance.Medium">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>
    <style name="TextAppearance.Bold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="TextAppearance.ExtraBold">
        <item name="android:fontFamily">@font/montserrat_extrabold</item>
    </style>

    <style name="Input" parent="TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColorHint">@color/themeAccent</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Button" parent="TextAppearance.ExtraBold">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/themePrimary</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">5dp</item>

    </style>

    <style name="Link" parent="TextAppearance.Medium">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/themeAccent</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@color/transparent</item>

    </style>

    <style name="Container">

        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="Avatar">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="civ_border_color">#FFFFFF</item>
        <item name="civ_border_width">4dp</item>
        <item name="civ_shadow">true</item>
        <item name="civ_shadow_radius">10</item>
        <item name="civ_shadow_color">#FFFFFF</item>
    </style>

    <!--Welcome screen-->
    <style name="Container.ws">
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
    <style name="Button.ws">
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="Button.ws.login">
        <item name="android:background">@color/themeAccent</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>
    <style name="Button.ws.signin">
        <item name="android:background">@color/themePrimary</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="TextAppearance.Bold.ws" parent="Container.ws">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>

    </style>

    <style name="TextAppearance.Medium.ws" parent="Container.ws">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">8sp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>

    </style>
</resources>
