<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="35dp"
    tools:context="com.holler.app.mvp.documents.DocumentsListItem">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/document_icon"

        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/photo"

        android:background="@color/transparent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toTopOf="@+id/document_icon"
        app:layout_constraintLeft_toRightOf="@+id/document_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/document_icon"
        >

        <TextView
            android:id="@+id/document_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Selfie"
            android:textSize="17dp"
            android:fontFamily="@font/montserrat"

            />

        <TextView
            android:id="@+id/file_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Document required. \nTap icon to select file."
            android:fontFamily="@font/montserrat"
            android:textSize="14dp"

            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>