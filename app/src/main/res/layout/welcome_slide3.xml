<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        style="@style/MA_Page_Padding"

        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/ma_text_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/earn_sample" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/ma_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            style="@style/MA_Header_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mas_header_notify" />

        <TextView
            style="@style/MA_Description_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mas_description_notify" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>