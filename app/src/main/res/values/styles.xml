<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Main activity styles-->
    <style name="MA_Header_Text" parent="MA_Page_Padding">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>

    </style>

    <style name="MA_Description_Text" parent="MA_Page_Padding">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">8sp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>

    </style>

    <style name="MA_Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17dp</item>
        <item name="android:fontFamily">@font/montserrat</item>

    </style>

    <style name="RA_Button" parent="MA_Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginTop">45dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>

    </style>

    <style name="MA_Page_Padding">
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">35dp</item>
    </style>

    <!--Login activity styles-->
    <style name="MAIN_Header_Back_Button">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:src">@drawable/vec_chevron_left_white_24dp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="MAIN_Header_Title">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>
    <style name="MAIN_Header_Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:background">@drawable/gradient_header_selector</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="LA_Page_Padding">
        <item name="android:paddingTop">80dp</item>
        <item name="android:paddingLeft">60dp</item>
        <item name="android:paddingRight">60dp</item>
    </style>

    <style name="LA_Input">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    <style name="LA_Link_Button">
        <item name="android:textAlignment">textStart</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    <style name="LA_Round_Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:src">@drawable/next_button_round</item>
    </style>





    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimaryDark
        </item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:listPreferredItemHeightSmall">@dimen/_40sdp</item>
        <item name="android:fontFamily">fonts/ClanPro-Book.otf</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="AppTheme.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
