                    <solid android:color="@color/energizedOrange"/>
                </shape>
            </item>
            <item
                android:height="30dp"
                android:width="30dp"
                android:top="5dp"
                android:right="40dp">
                <shape android:shape="oval">
                    <solid android:color="@color/energizedOrange"/>
                </shape>
            </item>

            <item
                android:height="34dp"
                android:width="34dp"
                android:top="3dp"
                android:right="5dp"
                android:left="20dp">
                <shape android:shape="oval">
                    <solid android:color="@color/white"/>
                    <stroke android:width="0.6dp" android:color="@color/colorAccent"/>
