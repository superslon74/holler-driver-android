<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"

    >

    <item custom:ust_online="true">
        <layer-list >
            <item
                android:top="5dp"
                android:bottom="5dp"
                android:right="20dp"
                android:height="30dp"
                android:width="35dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/energizedGreen"/>
                </shape>
            </item>

            <item
                android:height="30dp"
                android:width="30dp"
                android:top="5dp"
                android:right="5dp">
                <shape android:shape="oval">
                    <solid android:color="@color/energizedGreen"/>
                </shape>
            </item>
            <item
                android:height="30dp"
                android:width="30dp"
                android:top="5dp"
                android:right="40dp">
                <shape android:shape="oval">
                    <solid android:color="@color/energizedGreen"/>
                </shape>
            </item>

            <item
                android:height="34dp"
                android:width="34dp"
                android:top="3dp"
                android:right="37dp"
                android:left="20dp">
                <shape android:shape="oval">
                    <solid android:color="@color/white"/>
                    <stroke android:width="0.6dp" android:color="@color/colorAccent"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item custom:ust_offline="true">
        <layer-list android:paddingMode="stack">
            <item
                android:top="5dp"
                android:bottom="5dp"
                android:right="20dp"
